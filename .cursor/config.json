{
  "projectName": "SinglePageStartup",
  "rules": {
    "environmentRulesPath": ".cursor/rules/environment.mdc",
    "expertRulesPath": ".cursor/rules/expert.mdc"
  },
  "linting": {
    "enablePrettier": true,
    "enableESLint": true
  },
  "workflows": {
    "autoApplyRules": true,
    "autoApplyExpertProfile": true,
    "defaultLanguage": "typescript",
    "defaultFramework": "nextjs"
  },
  "defaults": {
    "fileNamingConvention": "kebab-case",
    "componentNamingConvention": "PascalCase",
    "typescriptStrictMode": true
  }
}
