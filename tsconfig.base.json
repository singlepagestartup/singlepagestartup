{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
    "strictPropertyInitialization": false,
    "types": ["node", "jest"],
    "paths": {
      "@sps/middlewares": ["libs/middlewares/src/index.ts"],
      "@sps/providers-db": ["libs/providers/db/src/index.ts"],
      "@sps/providers-kv": ["libs/providers/kv/src/index.ts"],
      "@sps/providers-file-storage": [
        "libs/providers/file-storage/src/index.ts"
      ],
      "@sps/shared-backend-api": ["libs/shared/backend/api/src/index.ts"],
      "@sps/shared-backend-database-config": [
        "libs/shared/backend/database/config/src/index.ts"
      ],
      "@sps/sps-business-logic": ["libs/shared/business-logic/src/index.ts"],
      "@sps/shared-frontend-api": ["libs/shared/frontend/api/src/index.ts"],
      "@sps/shared-frontend-client-api": [
        "libs/shared/frontend/client/api/src/index.ts"
      ],
      "@sps/shared-frontend-client-hooks": [
        "libs/shared/frontend/client/hooks/src/index.ts"
      ],
      "@sps/shared-frontend-client-store": [
        "libs/shared/frontend/client/store/src/index.ts"
      ],
      "@sps/shared-frontend-client-utils": [
        "libs/shared/frontend/client/utils/src/index.ts"
      ],
      "@sps/shared-frontend-client-web3": [
        "libs/shared/frontend/client/web3/src/index.ts"
      ],
      "@sps/shared-frontend-components/*": [
        "libs/shared/frontend/components/src/lib/*"
      ],
      "@sps/shared-frontend-server-api": [
        "libs/shared/frontend/server/api/src/index.ts"
      ],
      "@sps/shared-frontend-server-utils": [
        "libs/shared/frontend/server/utils/src/index.ts"
      ],
      "@sps/shared-hooks": ["libs/shared/hooks/src/index.ts"],
      "@sps/shared-ui-shadcn": ["libs/shared/ui/shadcn/src/index.ts"],
      "@sps/shared-ui-aceternity": ["libs/shared/ui/aceternity/src/index.ts"],
      "@sps/shared-third-parties": ["libs/shared/third-parties/src/index.ts"],
      "@sps/shared-utils": ["libs/shared/utils/src/index.ts"],
      "@sps/sps-backend-utils": ["libs/shared/backend/utils/src/index.ts"],
      "@sps/billing/*": ["libs/modules/billing/*"],
      "@sps/broadcast/*": ["libs/modules/broadcast/*"],
      "@sps/crm/*": ["libs/modules/crm/*"],
      "@sps/ecommerce/*": ["libs/modules/ecommerce/*"],
      "@sps/file-storage/*": ["libs/modules/file-storage/*"],
      "@sps/sps-generator-plugin": [
        "tools/plugins/sps-generator-plugin/src/index.ts"
      ],
      "@sps/host/*": ["libs/modules/host/*"],
      "@sps/notification/*": ["libs/modules/notification/*"],
      "@sps/rbac/*": ["libs/modules/rbac/*"],
      "@sps/website-builder/*": ["libs/modules/website-builder/*"],
      "@sps/blog/*": ["libs/modules/blog/*"],
      "@sps/startup/*": ["libs/modules/startup/*"],
      "@sps/ui-adapter": ["libs/shared/ui/adapter/src/index.ts"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "types",
      "./node_modules/@types/react"
    ]
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*"]
}
