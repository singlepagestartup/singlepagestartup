{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "target": "ES2022",
    "module": "ESNext",
    "jsx": "react-jsx",
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "declaration": true,
    "types": ["node", "jest"],
    "paths": {
      "@sps/providers-db": ["libs/providers/db/src/index.ts"],
      "@sps/providers-kv": ["libs/providers/kv/src/index.ts"],
      "@sps/shared-backend-api": ["libs/shared/backend/api/src/index.ts"],
      "@sps/shared-backend-database-config": [
        "libs/shared/backend/database/config/src/index.ts"
      ],
      "@sps/shared-frontend-client-api": [
        "libs/shared/frontend/client/api/src/index.ts"
      ],
      "@sps/shared-frontend-client-store": [
        "libs/shared/frontend/client/store/src/index.ts"
      ],
      "@sps/shared-frontend-client-utils": [
        "libs/shared/frontend/client/utils/src/index.ts"
      ],
      "@sps/shared-frontend-components": [
        "libs/shared/frontend/components/src/index.ts"
      ],
      "@sps/shared-frontend-hooks": ["libs/shared/frontend/hooks/src/index.ts"],
      "@sps/shared-frontend-server-api": [
        "libs/shared/frontend/server/api/src/index.ts"
      ],
      "@sps/shared-frontend-api": ["libs/shared/frontend/api/src/index.ts"],
      "@sps/shared-frontend-server-utils": [
        "libs/shared/frontend/server/utils/src/index.ts"
      ],
      "@sps/shared-frontend-utils-client": [
        "libs/shared/frontend/utils/client/src/index.ts"
      ],
      "@sps/shared-frontend-utils-server": [
        "libs/shared/frontend/utils/server/src/index.ts"
      ],
      "@sps/shared-hooks": ["libs/shared/hooks/src/index.ts"],
      "@sps/shared-store": ["libs/shared/store/src/index.ts"],
      "@sps/shared-ui-shadcn": ["libs/shared/ui/shadcn/src/index.ts"],
      "@sps/shared-utils": ["libs/shared/utils/src/index.ts"],
      "@sps/sps-backend-utils": ["libs/shared/backend/utils/src/index.ts"],
      "@sps/sps-billing/*": ["libs/modules/sps-billing/*"],
      "@sps/sps-crm/*": ["libs/modules/sps-crm/*"],
      "@sps/sps-file-storage/*": ["libs/modules/sps-file-storage/*"],
      "@sps/sps-generator-plugin": [
        "tools/plugins/sps-generator-plugin/src/index.ts"
      ],
      "@sps/sps-host/*": ["libs/modules/sps-host/*"],
      "@sps/sps-notification/*": ["libs/modules/sps-notification/*"],
      "@sps/sps-rbac/*": ["libs/modules/sps-rbac/*"],
      "@sps/sps-third-parties/*": ["libs/modules/sps-third-parties/*"],
      "@sps/sps-website-builder/*": ["libs/modules/sps-website-builder/*"],
      "@sps/startup/*": ["libs/modules/startup/*"],
      "@sps/ui-adapter": ["libs/shared/ui/adapter/src/index.ts"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "types",
      "./node_modules/@types/react"
    ]
  },
  "exclude": ["node_modules", "tmp"],
  "include": ["**/*"]
}
