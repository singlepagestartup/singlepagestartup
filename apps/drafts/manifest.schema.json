{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://singlepagestartup.local/schemas/drafts/manifest.schema.json",
  "title": "SPS Draft Manifest",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "title", "type", "entry", "status"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "enum": ["html", "react", "next"]
    },
    "entry": {
      "type": "string",
      "minLength": 1
    },
    "status": {
      "type": "string",
      "enum": ["incoming", "approved", "archived"]
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "createdAt": {
      "type": "string"
    },
    "updatedAt": {
      "type": "string"
    }
  }
}
