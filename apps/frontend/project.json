{
  "name": "frontend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/frontend",
  "projectType": "application",
  "tags": [],
  "targets": {
    "db:generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run frontend:db:migrate"
          },
          {
            "command": "nx run frontend:db:sps-website-builder-generate"
          },
          {
            "command": "nx run frontend:db:sps-file-storage-generate"
          },
          {
            "command": "nx run frontend:db:sps-rbac-generate"
          },
          {
            "command": "nx run frontend:db:startup-generate"
          }
        ]
      }
    },
    "db:sps-website-builder-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/modules/sps-website-builder/backend/app/root",
        "commands": [
          {
            "command": "drizzle-kit up --config=./src/lib/db/config.ts"
          },
          {
            "command": "drizzle-kit generate --config=./src/lib/db/config.ts"
          }
        ]
      }
    },
    "db:sps-website-builder-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/modules/sps-website-builder/backend/app/root",
        "commands": [
          {
            "command": "bun run ./src/lib/db/migrate.ts"
          }
        ]
      }
    },
    "db:sps-file-storage-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/modules/sps-file-storage/backend/app/root",
        "commands": [
          {
            "command": "drizzle-kit up --config=./src/lib/db/config.ts"
          },
          {
            "command": "drizzle-kit generate --config=./src/lib/db/config.ts"
          }
        ]
      }
    },
    "db:sps-file-storage-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/modules/sps-file-storage/backend/app/root",
        "commands": [
          {
            "command": "bun run ./src/lib/db/migrate.ts"
          }
        ]
      }
    },
    "db:sps-rbac-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/modules/sps-rbac/backend/app/root",
        "commands": [
          {
            "command": "drizzle-kit up --config=./src/lib/db/config.ts"
          },
          {
            "command": "drizzle-kit generate --config=./src/lib/db/config.ts"
          }
        ]
      }
    },
    "db:sps-rbac-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/modules/sps-rbac/backend/app/root",
        "commands": [
          {
            "command": "bun run ./src/lib/db/migrate.ts"
          }
        ]
      }
    },
    "db:startup-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/modules/startup/backend/app/root",
        "commands": [
          {
            "command": "drizzle-kit up --config=./src/lib/db/config.ts"
          },
          {
            "command": "drizzle-kit generate --config=./src/lib/db/config.ts"
          }
        ]
      }
    },
    "db:startup-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/modules/startup/backend/app/root",
        "commands": [
          {
            "command": "bun run ./src/lib/db/migrate.ts"
          }
        ]
      }
    },
    "db:migrate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "apps/frontend",
        "commands": [
          {
            "command": "nx run frontend:db:sps-website-builder-migrate"
          },
          {
            "command": "nx run frontend:db:sps-file-storage-migrate"
          },
          {
            "command": "nx run frontend:db:sps-rbac-migrate"
          },
          {
            "command": "nx run frontend:db:startup-migrate"
          }
        ]
      }
    },
    "db:drop": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "apps/frontend",
        "commands": [
          {
            "command": "drizzle-kit drop --config=./src/db/config.ts"
          },
          {
            "command": "bun run ./src/db/drop.ts"
          }
        ]
      }
    },
    "db:dump": {
      "executor": "nx:run-commands",
      "dependsOn": ["db:prepare"],
      "options": {
        "parallel": false,
        "cwd": "apps/frontend",
        "commands": [
          {
            "command": "nx run frontend:db:migrate"
          },
          {
            "command": "bun run src/db/dump.ts"
          }
        ]
      }
    },
    "db:seed": {
      "executor": "nx:run-commands",
      "dependsOn": ["db:prepare"],
      "options": {
        "parallel": false,
        "cwd": "apps/frontend",
        "commands": [
          {
            "command": "nx run frontend:db:migrate"
          },
          {
            "command": "bun run src/db/seed.ts"
          }
        ]
      }
    },
    "db:studio": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "apps/frontend",
        "commands": [
          {
            "command": "bun drizzle-kit studio --port 3001 --config src/db/config.ts"
          }
        ]
      }
    },
    "theme": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run @sps/shared-frontend-utils-server:tsc:build"
          },
          {
            "command": "node dist/libs/shared/frontend/utils/server/src/lib/create-tailwind-theme.js"
          }
        ]
      }
    },
    "prepare": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run frontend:db:migrate"
          },
          {
            "command": "rm -rf apps/frontend/.next"
          },
          {
            "command": "nx run frontend:theme"
          }
        ]
      }
    },
    "next:dev": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "development",
      "cache": true,
      "options": {
        "buildTarget": "next:build",
        "buildLibsFromSource": true,
        "dev": true,
        "port": 3000
      }
    },
    "next:build": {
      "executor": "@nx/next:build",
      "outputs": ["{options.outputPath}"],
      "dependsOn": [],
      "cache": true,
      "defaultConfiguration": "production",
      "options": {
        "buildLibsFromSource": true,
        "outputPath": "dist/{projectRoot}"
      }
    },
    "next:start": {
      "executor": "@nx/next:server",
      "defaultConfiguration": "production",
      "dependsOn": [],
      "options": {
        "buildTarget": "frontend:next:build",
        "dev": false,
        "port": 3000
      }
    },
    "next:export": {
      "executor": "@nx/next:export",
      "options": {
        "buildTarget": "frontend:build:production"
      }
    },
    "lint": {}
  }
}
