{
  "$schema": "https://json-schema.org/schema",
  "$id": "CreateModelFrontendComponentVariant",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name of variant would you like to use?"
    },
    "type": {
      "type": "string",
      "description": "Type of component",
      "x-prompt": {
        "message": "Which type of component would you like to generate?",
        "type": "list",
        "default": "startup",
        "items": [
          {
            "value": "startup"
          },
          {
            "value": "sps-lite"
          },
          {
            "value": "sps"
          }
        ]
      }
    },
    "project": {
      "type": "string",
      "description": "The root component for creating component. Shoule be [module]-models-[model]-frontend-component",
      "x-prompt": "Select root component?",
      "$default": {
        "$source": "project"
      },
      "x-dropdown": "projects"
    }
  },
  "required": ["name", "project", "type"]
}
