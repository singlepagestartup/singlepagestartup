{
  "$schema": "https://json-schema.org/schema",
  "$id": "SchemaField",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the field in snake_case, that will be added to the database",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "model_name": {
      "type": "string",
      "description": "Name of the model (page)",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "type": {
      "type": "string",
      "description": "Type of component",
      "x-prompt": {
        "message": "Select type of adding field",
        "type": "list",
        "default": "text",
        "items": [
          {
            "value": "text"
          },
          {
            "value": "number"
          }
        ]
      }
    },
    "level": {
      "type": "string",
      "description": "Where to place the field",
      "x-prompt": {
        "message": "Select level",
        "type": "list",
        "default": "startup",
        "items": [
          {
            "value": "startup"
          },
          {
            "value": "sps-lite"
          }
        ]
      }
    }
  },
  "required": ["name", "model_name", "type", "level"]
}
