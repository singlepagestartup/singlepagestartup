{
  "$schema": "https://json-schema.org/schema",
  "$id": "SchemaField",
  "title": "",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "Name of the field in snake_case, that will be added to the database",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "model_name": {
      "type": "string",
      "description": "Name of the model (page)",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "action": {
      "type": "string",
      "description": "Action to perform",
      "x-prompt": {
        "message": "Create will create a new schema field and add it to contracts. Remove will remove a schema field and remove it from contracts.",
        "type": "list",
        "default": "create",
        "items": [
          {
            "value": "create"
          },
          {
            "value": "remove"
          }
        ]
      }
    },
    "module": {
      "type": "string",
      "description": "Module",
      "x-prompt": {
        "message": "Select module for creating model",
        "type": "list",
        "default": "sps-website-module",
        "items": [
          {
            "value": "sps-billing"
          },
          {
            "value": "sps-crm"
          },
          {
            "value": "sps-ecommerce"
          },
          {
            "value": "sps-file-storage"
          },
          {
            "value": "sps-rbac"
          },
          {
            "value": "sps-subscription"
          },
          {
            "value": "sps-website-builder"
          },
          {
            "value": "startup"
          }
        ]
      }
    },
    "pg_core_type": {
      "type": "string",
      "description": "Type of schema field",
      "x-prompt": {
        "message": "Select type",
        "type": "list",
        "default": "text",
        "items": [
          { "value": "real" },
          { "value": "serial" },
          { "value": "uuid" },
          { "value": "bigint" },
          { "value": "text" },
          { "value": "boolean" },
          { "value": "timestamp" },
          { "value": "jsonb" },
          { "value": "json" },
          { "value": "integer" },
          { "value": "date" },
          { "value": "time" },
          { "value": "number" }
        ]
      }
    },
    "level": {
      "type": "string",
      "description": "Where to place the field",
      "x-prompt": {
        "message": "Select level",
        "type": "list",
        "default": "startup",
        "items": [
          {
            "value": "startup"
          },
          {
            "value": "sps-lite"
          }
        ]
      }
    }
  },
  "required": [
    "module",
    "name",
    "action",
    "model_name",
    "level",
    "pg_core_type"
  ]
}
