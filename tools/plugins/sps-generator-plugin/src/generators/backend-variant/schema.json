{
  "$schema": "https://json-schema.org/schema",
  "$id": "CreateModel",
  "title": "",
  "type": "object",
  "properties": {
    "variant": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "entity_name": {
      "type": "string",
      "description": "",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use?"
    },
    "level": {
      "type": "string",
      "description": "Type of component",
      "x-prompt": {
        "message": "Which type of component would you like to generate?",
        "type": "list",
        "default": "startup",
        "items": [
          {
            "value": "startup"
          },
          {
            "value": "sps-lite"
          },
          {
            "value": "sps"
          }
        ]
      }
    },
    "module": {
      "type": "string",
      "description": "Module",
      "x-prompt": {
        "message": "Select module for creating model",
        "type": "list",
        "default": "sps-website-module",
        "items": [
          {
            "value": "sps-billing"
          },
          {
            "value": "sps-crm"
          },
          {
            "value": "sps-ecommerce"
          },
          {
            "value": "sps-file-storage"
          },
          {
            "value": "sps-rbac"
          },
          {
            "value": "sps-subscription"
          },
          {
            "value": "sps-website-builder"
          },
          {
            "value": "startup"
          }
        ]
      }
    },
    "action": {
      "type": "string",
      "description": "Action to perform",
      "x-prompt": {
        "message": "Create will create a new model. Remove will remove the model.",
        "type": "list",
        "default": "create",
        "items": [
          {
            "value": "create"
          },
          {
            "value": "remove"
          }
        ]
      }
    }
  },
  "required": ["variant", "entity_name", "level", "module", "action"]
}
