{
  "$schema": "https://json-schema.org/schema",
  "$id": "Relation",
  "title": "",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "description": "Action to perform",
      "x-prompt": {
        "message": "Create will create a new relation between two models. Remove will remove a relation between two models.",
        "type": "list",
        "default": "create",
        "items": [
          {
            "value": "create"
          },
          {
            "value": "remove"
          }
        ]
      }
    },
    "relation_name": {
      "type": "string",
      "description": "Relation name, for example: widgets-to-features",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },

    "left_model_name": {
      "type": "string",
      "description": "Model name, for example: widget",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "left_module_name": {
      "type": "string",
      "description": "Module name, for example: website-builder",
      "x-prompt": {
        "message": "Select module",
        "type": "list",
        "default": "website-builder",
        "items": [
          { "value": "billing" },
          { "value": "broadcast" },
          { "value": "crm" },
          { "value": "file-storage" },
          { "value": "host" },
          { "value": "notification" },
          { "value": "rbac" },
          { "value": "ecommerce" },
          { "value": "sps-third-parties" },
          { "value": "website-builder" },
          { "value": "startup" }
        ]
      }
    },
    "module": {
      "type": "string",
      "description": "Module",
      "x-prompt": {
        "message": "Select module for creating model",
        "type": "list",
        "default": "website-builder",
        "items": [
          { "value": "billing" },
          { "value": "broadcast" },
          { "value": "crm" },
          { "value": "file-storage" },
          { "value": "host" },
          { "value": "notification" },
          { "value": "rbac" },
          { "value": "ecommerce" },
          { "value": "sps-third-parties" },
          { "value": "website-builder" },
          { "value": "startup" }
        ]
      }
    },
    "right_model_name": {
      "type": "string",
      "description": "Model name, for example: features",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "right_module_name": {
      "type": "string",
      "description": "Module name, for example: website-builder",
      "x-prompt": {
        "message": "Select module",
        "type": "list",
        "default": "website-builder",
        "items": [
          { "value": "billing" },
          { "value": "broadcast" },
          { "value": "crm" },
          { "value": "file-storage" },
          { "value": "host" },
          { "value": "notification" },
          { "value": "rbac" },
          { "value": "ecommerce" },
          { "value": "sps-third-parties" },
          { "value": "website-builder" },
          { "value": "startup" }
        ]
      }
    }
  },
  "required": ["relation_name", "action", "module", "left_model_name", "right_model_name", "left_module_name", "right_module_name"]
}
