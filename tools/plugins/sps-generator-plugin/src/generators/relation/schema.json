{
  "$schema": "https://json-schema.org/schema",
  "$id": "Relation",
  "title": "",
  "type": "object",
  "properties": {
    "action": {
      "type": "string",
      "description": "Action to perform",
      "x-prompt": {
        "message": "Create will create a new relation between two models. Remove will remove a relation between two models.",
        "type": "list",
        "default": "create",
        "items": [
          {
            "value": "create"
          },
          {
            "value": "remove"
          }
        ]
      }
    },
    "left_model_name": {
      "type": "string",
      "description": "Model name, for example: page",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "right_model_name": {
      "type": "string",
      "description": "Model name, for example: layout",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    }
  },
  "required": ["action", "left_model_name", "right_model_name"]
}
