{
  "name": "@sps/sps-website-builder",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/modules/sps-website-builder",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {},
    "tsc:build": {},
    "repository-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run @sps/sps-website-builder:models:button:repository-generate"
          }
        ]
      }
    },
    "repository-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run @sps/sps-website-builder:models:button:repository-migrate"
          }
        ]
      }
    },
    "models:button:repository-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/modules/sps-website-builder/models/button/backend/repository/database",
        "commands": [
          {
            "command": "drizzle-kit up --config=./src/lib/config.ts"
          },
          {
            "command": "drizzle-kit generate --config=./src/lib/config.ts"
          }
        ]
      }
    },
    "models:button:repository-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "envFile": "apps/host/.env.local",
        "cwd": "libs/modules/sps-website-builder/models/button/backend/repository/database",
        "commands": [
          {
            "command": "bun run ./src/lib/migrate.ts"
          }
        ]
      }
    }
  }
}
