{
  "name": "@sps/sps-crm",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/modules/sps-crm",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {},
    "tsc:build": {},
    "repository-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run @sps/sps-crm:models:repository-generate"
          },
          {
            "command": "nx run @sps/sps-crm:relations:repository-generate"
          }
        ]
      }
    },
    "models:repository-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run @sps/sps-crm:models:widget:repository-generate"
          }
        ]
      }
    },
    "relations:repository-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": []
      }
    },
    "repository-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run @sps/sps-crm:repository-generate"
          },
          {
            "command": "nx run @sps/sps-crm:models:repository-migrate"
          },
          {
            "command": "nx run @sps/sps-crm:relations:repository-migrate"
          }
        ]
      }
    },
    "models:repository-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": [
          {
            "command": "nx run @sps/sps-crm:models:widget:repository-migrate"
          }
        ]
      }
    },
    "relations:repository-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "commands": []
      }
    },
    "models:widget:repository-generate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "cwd": "libs/modules/sps-crm/models/widget/backend/repository/database",
        "commands": [
          {
            "command": "drizzle-kit up --config=./src/lib/config.ts"
          },
          {
            "command": "drizzle-kit generate --config=./src/lib/config.ts"
          }
        ]
      }
    },
    "models:widget:repository-migrate": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": false,
        "envFile": "apps/host/.env.local",
        "cwd": "libs/modules/sps-crm/models/widget/backend/repository/database",
        "commands": [
          {
            "command": "bun run ./src/lib/migrate.ts"
          }
        ]
      }
    }
  }
}
